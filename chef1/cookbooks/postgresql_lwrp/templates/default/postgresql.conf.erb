data_directory = '/var/lib/postgresql/<%= @cluster_version %>/<%= @cluster_name %>'
hba_file = '/etc/postgresql/<%= @cluster_version %>/<%= @cluster_name %>/pg_hba.conf'
ident_file = '/etc/postgresql/<%= @cluster_version %>/<%= @cluster_name %>/pg_ident.conf'
external_pid_file = '/var/run/postgresql/<%= @cluster_version %>-<%= @cluster_name %>.pid'

<% @configuration.sort.each do |parameter, value| %>
  <% if value.to_s !~ /^[a-zA-Z0-9]+$/ -%>
<%= parameter %> = '<%= value %>'
  <% else -%>
<%= parameter %> = <%= value %>
  <% end -%>
<% end %>
